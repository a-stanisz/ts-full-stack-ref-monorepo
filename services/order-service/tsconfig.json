{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "baseUrl": "../",
    "moduleResolution": "node",
    "outDir": ".dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "preserveWatchOutput": true,
    "sourceMap": true
  },
  "exclude": ["node_modules", "test-reports/**"]
}
