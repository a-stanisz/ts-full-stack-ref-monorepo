{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./.dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "composite": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@configurator": ["./libraries/configurator"],
      "@error-handler": ["./libraries/error-handler"],
      "@logger": ["./libraries/logger"],
      "@order-service": ["./services/order-service"],
    }
  }
}
