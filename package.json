{
  "name": "ts-full-stack-ref-monorepo",
  "version": "0.0.2",
  "description": "TypeScript full-stack reference monorepo for 2022",
  "main": "index.js",
  "scripts": {
    "host:test": "turbo run test",
    "host:build": "turbo run build",
    "host:start": "nodemon -r dotenv/config services/order-service/.dist/bin/www.js",
    "installDeps": "turbo run installDeps",
    "updateLockfiles": "turbo run updateLockfiles",
    "maintenance:delete-node-modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "maintenance:delete-dist": "find . -name '.dist' -type d -prune -exec rm -rf '{}' +"
  },
  "workspaces": [
    "libraries/*",
    "services/*"
  ],
  "author": "Adam Staniszewski",
  "license": "MIT",
  "volta": {
    "node": "18.10.0",
    "npm": "8.19.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.23.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.1",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "turbo": "^1.5.3",
    "typescript": "^4.8.2"
  }
}
